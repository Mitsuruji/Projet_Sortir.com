{% extends 'base.html.twig' %}

{% block title %}
    Créer une nouvelle sortie
{% endblock %}

{% block body %}

    <div class="main-modif">
        <h1>Modifier une sortie</h1>

        <div id="createSortie">
            <div>
                {{ form_start(sortieForm) }}
                <div>
                    {{ form_label(sortieForm.nom) }}
                    {{ form_errors(sortieForm.nom) }}
                    {{ form_widget(sortieForm.nom) }}
                </div>
                <div>
                    {{ form_label(sortieForm.dateHeureDebut) }}
                    {{ form_errors(sortieForm.dateHeureDebut) }}
                    {{ form_widget(sortieForm.dateHeureDebut) }}
                </div>
                <div>
                    {{ form_label(sortieForm.dateLimiteInscription) }}
                    {{ form_errors(sortieForm.dateLimiteInscription) }}
                    {{ form_widget(sortieForm.dateLimiteInscription) }}
                </div>
                <div>
                    {{ form_label(sortieForm.nbInscriptionsMax) }}
                    {{ form_errors(sortieForm.nbInscriptionsMax) }}
                    {{ form_widget(sortieForm.nbInscriptionsMax) }}
                </div>
                <div>
                    {{ form_label(sortieForm.duree) }}
                    {{ form_errors(sortieForm.duree) }}
                    {{ form_widget(sortieForm.duree) }}
                </div>
                <div>
                    {{ form_label(sortieForm.infosSortie) }}
                    {{ form_errors(sortieForm.infosSortie) }}
                    {{ form_widget(sortieForm.infosSortie) }}
                </div>
            </div>
            <div>
                <div>
                    {{ form_label(sortieForm.campusOrganisateur) }}
                    {{ form_errors(sortieForm.campusOrganisateur) }}
                    {{ form_widget(sortieForm.campusOrganisateur) }}
                </div>
                <div>
                    {{ form_label(sortieForm.sortieVille) }}
                    {{ form_errors(sortieForm.sortieVille) }}
                    {{ form_widget(sortieForm.sortieVille) }}
                </div>
                <div>
                    {{ form_label(sortieForm.sortieLieu) }}
                    {{ form_errors(sortieForm.sortieLieu) }}
                    {{ form_widget(sortieForm.sortieLieu) }}

                </div>

            </div>
            {{ form_end(sortieForm) }}
            {% block javascripts %}
                <script lang= "javascript"
                        src = "https://code.jquery.com/jquery-3.2.1.min.js"></script>
                <script lang= "javascript"
                        src = {{ asset('js/app_modif.js') }}></script>
            {% endblock %}

            <div>
                * : Champs obligatoires
            </div>
            <div>
                <a href="{{ path('create_sortieForm') }}">
                    <button type="submit" class="btn btn-primary" value="create" name="bouton_modif">Créer</button>
                </a>
                <a href="{{ path('create_sortieForm') }}">
                    <button type="submit" class="btn btn-success" value="publish" name="bouton_modif">Publier la sortie</button>
                </a>
                <a href="{{ path('create_sortieForm') }}">
                    <button type="submit" class="btn btn-danger" value="supprimer" name="bouton_modif">Supprimer la sortie</button>
                </a>
                <a href="#">
                    <button type="reset" class="btn btn-primary" value="Cancel">Annuler</button>
                </a>

            </div>

        </div>

    </div>
{% endblock %}



