{% extends 'base_mobile.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form id="formLoginMobile" method="post">

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputMailOrUsername">Mail or Username</label>
        <input type="text" value="{{ last_username }}" name="mail_or_username" id="inputMailOrUsername" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se rappeler de moi
                </label>
            </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
